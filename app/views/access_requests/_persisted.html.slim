  .image_display
    = link_to access_request.business_registration_certificate, class: 'fancy-box-link', data: {fancybox: "gallery", caption: t('place_holder.business_registration_certificate') } do
      = image_tag access_request.business_registration_certificate.variant(resize: "500x500"), class: 'image-full-width fancy-box-image'

    .file.btn.btn-lg.btn-primary.btn-upload.btn-full
      = t('place_holder.business_registration_certificate')
      = f.file_field :business_registration_certificate, class: 'file-upload', accept:'image/*'

